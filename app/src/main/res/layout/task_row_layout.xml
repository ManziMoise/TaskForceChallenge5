<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    app:cardElevation="3dp"
    android:backgroundTint="@color/White_TF"
    android:layout_marginVertical="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tool:text=""
                android:textColor="@color/black_TF"
                android:fontFamily="@font/montserrat_bold"
                android:hint="the title"
                android:paddingStart="20dp"
                android:buttonTint="@color/black_TF"></CheckBox>


        </RelativeLayout>

        <TextView
            android:id="@+id/priorityText"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginLeft="65dp"
            android:background="@drawable/corner_small_buttons"
            android:gravity="center"
            android:text="Medium"
            android:textAllCaps="false"
            android:textColor="@color/White_TF"
            android:textSize="8sp"></TextView>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Created"
               android:textColor="@color/black_TF"
               android:textSize="10dp"
               android:paddingBottom="10dp"
               android:layout_marginLeft="65dp"
               android:layout_marginTop="10dp"
               android:id="@+id/created"></TextView>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Created"
               android:textColor="@color/black_TF"
               android:textSize="10dp"
               android:paddingBottom="10dp"
               android:layout_toRightOf="@+id/created"
               android:layout_marginLeft="5dp"
               android:layout_marginTop="10dp"
               android:id="@+id/created_date"></TextView>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Created"
               android:textColor="@color/black_TF"
               android:textSize="10dp"
               android:paddingBottom="10dp"
               android:layout_toRightOf="@+id/created_date"
               android:layout_marginLeft="65dp"
               android:layout_marginTop="10dp"
               android:id="@+id/modified"></TextView>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Created"
               android:textColor="@color/black_TF"
               android:textSize="10dp"
               android:paddingBottom="10dp"
               android:layout_toRightOf="@+id/modified"
               android:layout_marginLeft="5dp"
               android:layout_marginTop="10dp"
               android:id="@+id/modified_date"></TextView>


       </RelativeLayout>


    </LinearLayout>



</androidx.cardview.widget.CardView>